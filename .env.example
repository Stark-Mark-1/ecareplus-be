# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ecare_plus"

# JWT
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Session
SESSION_SECRET="your-session-secret-change-in-production"

# Email (Brevo)
BREVO_API_KEY="your-brevo-api-key"
EMAIL_USER="noreply@ecareplus.com"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8000/auth/google/callback"  # Your backend callback URL

# Frontend URLs - CRITICAL for OAuth redirects
FRONTEND_URL="http://localhost:3000"  # Your frontend base URL (React/Vue/etc)

# Server
PORT=8000  # Backend port (different from frontend)
NODE_ENV="development"
ALLOW_MOCK_OTP="true"